<h1>Listing pages of <%= @site_name %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= truncate(page.content, :length => 50) %></td>
    <td><%= link_to 'Edit page', edit_page_path(page) %></td>
    <td><%= link_to 'Edit locals', page %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path(:site_id => @site_id) %>

<br />


